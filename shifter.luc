module shifter (
    input a[16], // defining inputs and outputs
    input b[16],
    input alufn[6],
    output out[16] // output for shifted value
  ) {

  always {
    case(alufn[1:0]) {
      2b00:
        //left shift signed
        out = a <<< b[2:0];
      2b01:
        //right shift signed
        out = a >>> b[2:0];
      2b11:
        //right shift arithmetic
        out = $signed(a) >>> b[2:0];
      default: //
        out = 0;
    }
  }
}
